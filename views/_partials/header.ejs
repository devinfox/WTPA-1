    <link href="https://fonts.googleapis.com/css?family=Cabin" rel="stylesheet">
</head>

<body class="background-photo"></body>

<nav id="navHeader" class="navbar navbar-inverse navbar-fluid navbar-toggleable-md">
    <button id="burger" class="navbar-toggler navbar-toggler-right custom-toggler"  type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">
        <i class="fa fa-bars" aria-hidden="true"></i>
        </span>
    </button>
    <a class="navbar-brand" href="#">
        <img src="https://i.imgur.com/o18gSg1.png" style="width:40px;">
    </a>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <!-- <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li> -->
            <% if (user) { %>
                <li class='nav-item'>
                    <a class="nav-link">Hello,
                        <%=user.name %>
                    </a>
                </li>
                <li class='nav-item'>
                    <a href='/party/<%=user.id%>' class="nav-link">Go To Itinerary</a>
                </li>
                <li class="nav-item">
                    <a class='nav-link' style="color: red" href="/logout">Logout</a>
                </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class='nav-link' style="color: red" href="/auth/google">Log in with Google</a>
                    </li>
                    <% } %>
        </ul>
    </div>
</nav>

<div id="headLogo" class="col-xs-10 text-center">
    <span>
        <img src="https://i.imgur.com/xa83WZ8.png">
