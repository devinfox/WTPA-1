<%- include('./../_partials/header') %>
<h1>here is the user show page</h1>
<a href='/'>back to search</a>

<% if (itineraryStops) {%>
  <div class="row results">
  <% itineraryStops.forEach(function(elem) { %>
      <div style="border: 1px solid black; margin: 0 auto; width: 300px">
          Name: <%= elem.name %><br>
          Location: <%= elem.location %><br>
          <button class="btn btn-xs btn-danger">remove</button>
      </div>
  <% }) %>
  </div>
<% } %>

<a class="btn btn-success" href="/users/<%= user.id %>/comments/new">Add New Comment</a>

<% user.comments.forEach(function(comment){ %>
    <div class="row">
        <div class="col-md-12">
            <strong><%= comment.author.name %></strong>
            <p>
                <%= comment.text %> 
            </p>
        <% if(user && comment.author.id.equals(user._id)){ %>
            <a class="btn btn-xs btn-warning" 
               href="/users/<%=user._id %>/comments/<%=comment._id %>/edit">Edit</a>
            <form id="delete-form" action="/campgrounds/<%=user._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
            </form>
        <% } %>
        </div>
    </div>
<% }) %>

<%- include('./../_partials/footer') %>