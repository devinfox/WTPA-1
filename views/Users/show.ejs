<%- include('./../_partials/header') %>
<h1>here is the user show page</h1>
<a href='/'>back to search</a>

<% if (itineraryStops) {%>
  <div class="row results">
  <% itineraryStops.forEach(function(elem) { %>
      <div style="border: 1px solid black; margin: 0 auto; width: 300px">
          Name: <%= elem.name %><br>
          Location: <%= elem.location %><br>
          <button class="btn btn-xs btn-danger">remove</button>
      </div>
  <% }) %>
  </div>
<% } %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= user.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users/<%= user._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('./../_partials/footer') %>