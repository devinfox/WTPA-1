<%- include('./../_partials/header') %>
<h1>Here is the new comment page</h1>

<div class="container">
  <div class="row">
      <h1 style="text-align: center">Add New Comment to <%= user.name %></h1>
      <div style="width: 30%; margin: 25px auto;">
          <form action="/users/<%= user._id %>/comments" method="POST">
              <div class="form-group">
                  <input class="form-control" type="text" name="comment[text]" placeholder="text">
              </div>
              <div class="form-group">
                  <button class="btn btn-lg btn-primary btn-block">Submit!</button>
              </div>
          </form>
          <a href="/users/<%=user._id%>">Go Back</a>
      </div>
  </div>
</div>

<%- include('./../_partials/footer') %>