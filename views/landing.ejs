<%- include('./_partials/header') %>

<h1 class="jumbotron text-center">Yelp search</h1>
<div class="row">
    <div class="col-xs-6 col-xs-offset-6">
        <form action="/" method="POST">
            <div class="input-group">
                <input type="text" name="term" class="form-control" placeholder="What would you like to eat?" <% if (searchRequest.term) { %> value="<%=searchRequest.term%>" <% }%> >
                <input type ="text" name="location" class="form-control" placeholder="Where?" <% if (searchRequest.location) { %> value="<%=searchRequest.location%>" <% } %> >
                <span class="btn-group-vertical">
                <button class="btn btn-success" type="submit">Go!</button>
                <button class="btn btn-danger" formaction="/?random=true" type="submit">I'm feeling adventurous</button>
                </span>
            </div>
        </form>
    </div>
</div>
<br>
<div class="results">
<% if (restaurantInfo[0]) {%>
    <% restaurantInfo.forEach(function(elem) { %>
    
        <div style="border: 1px solid black; margin: 0 auto; width: 300px">
        Name: <%= elem.name %><br>
        Rating: <%= elem.rating %><br>
        Location: <%= elem.location.address1 %><br>
        <button href="#" class='btn btn-xs btn-warning'>add</button>
        <a href="<%= elem.url %> ">To Yelp</a>
        </div>
    
    <% }) %>
<% } %>
</div>	

<%- include('./_partials/footer') %>