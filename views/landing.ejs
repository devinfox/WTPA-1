<%- include('./_partials/header') %>

<div class ="container"><br><br>
    <div class="row">
        <div class="col-xs-12 text-center">
            <form class="form-inline" action="/" method="POST">
                <div class="form-group">
                    <input size="50" type="text" name="term" class="form-control" placeholder="What would you like to eat/drink?">
                </div>
                <div class="form-group">
                    <input size="50" type="text" name="location" class="form-control" placeholder="Where?">
                    <!-- <span class="btn-group-vertical"></span> -->
                </div><br><br>
                    <button class="btn btn-success" type="submit">Go!</button>
                    <button class="btn btn-success" formaction="/?random=true" type="submit">I'm feeling adventurous</button>
            </form>
        </div>
    </div>

<br><br>

<% if (restaurantInfo[0]) {%>
    <% restaurantInfo.forEach(function(elem) { %>
        
        <div class="col-xs-12 text-left results">
                
        <img class="col-xs-2" style="width:150px; height: 100px"  src= <%= elem.image_url %>>
        Name: <%= elem.name %><br>
        Rating: <%= elem.rating %><br>
        Location: <%= elem.location.address1 %><br><br>
        <button href="#" class='btn btn-xs btn-warning'>add</button>
        <a href="<%= elem.url %> ">To Yelp</a>
        </div>
    
    <% }) %>
<% } %>
    
</div>	
</div>

<%- include('./_partials/footer') %>